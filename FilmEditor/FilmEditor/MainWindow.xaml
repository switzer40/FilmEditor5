<Window x:Class="FilmEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FilmEditor"
        mc:Ignorable="d"
        Title="MainWindow" Height="95" Width="525">
    <WrapPanel Orientation="Horizontal">
        <Button Content="Exit" Click="Close"/>
        <Button Content="Films" Click="FilmPanel"/>
        <Button Content="People" Click="PersonPanel"/>
        <Button Content="Countries" Click="CountryPanel"/>
        <Button Content="Locations" Click="LocationPanel"/>
    </WrapPanel>
</Window>
